<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".loginScreen">
    <TextView
        android:id="@+id/textt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif"
        android:textSize="30sp"
        android:text="Welcome Back"
        android:textColor="@color/main03"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="60dp"
        android:layout_marginLeft="20dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/randomtext1"
        app:layout_constraintTop_toBottomOf="@id/textt"
        android:textSize="18sp"
        android:padding="20dp"
        android:textColor="#9e9e9e"
       app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:text="Login here to experience our services like  exercises, organise chores, awareness, and also an emergency SOS feature"
        />
    <EditText
        android:id="@+id/emailtext"

        android:hint="Email"
        android:padding="10dp"
        android:layout_margin="15dp"
        android:textColorHint="@color/main02"
        android:textColor="@color/main01"
        android:inputType="textEmailAddress"
        android:layout_width="match_parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/randomtext1"
        android:layout_height="wrap_content"
        android:background="@drawable/sharp_rect01"
        />
    <EditText
        android:id="@+id/passwordtext"
        app:layout_constraintTop_toBottomOf="@id/emailtext"
        android:hint="Password"
        android:textColorHint="@color/main02"
        android:textColor="@color/main01"
        android:padding="10dp"
        android:layout_margin="15dp"
        android:inputType="textPassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/sharp_rect01"
        />
    <Button
        android:id="@+id/loginButton"
        style="@style/Widget.AppCompat.Button.Colored"
        android:text="LOGIN"
        android:layout_margin="30dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:backgroundTint="@color/main03"
        android:layout_width="wrap_content"
        android:background="@drawable/sharp_rect02"
        android:textColor="@color/white"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/passwordtext"
        android:layout_centerHorizontal="true"
        android:minWidth="120dp"
        ></Button>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/randomtext2"
        app:layout_constraintTop_toBottomOf="@id/loginButton"
        android:textSize="18sp"
        android:padding="20dp"
        android:textColor="#9e9e9e"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:text="Not a member? Register Here"
        />
    <ImageView
        android:layout_width="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_height="350dp"
        android:layout_marginBottom="-10dp"
        app:layout_constraintTop_toBottomOf="@id/randomtext2"
        app:layout_constraintBottom_toBottomOf="parent"
        android:src="@drawable/register"
        tools:ignore="MissingConstraints" />
</androidx.constraintlayout.widget.ConstraintLayout>